724. Find Pivot Index

import java.util.*;
public class Solution {
    public int pivotIndex(int[] nums) {
        int n=nums.length;
        int[] LP=new int[n];
        int[] RP=new int[n];
    for(int i=1;i<n;i++){
        LP[i]=LP[i-1]+nums[i-1];
    }
    for(int i=n-2;i>=0;i--){
        RP[i]=RP[i+1]+nums[i+1];
    }
    for(int i=0;i<n;i++){
        if(LP[i]==RP[i]){
            return i;
        }
    }
    return -1;
}
}
