2574. Left and Right Sum Differences

public class Solution {
    public int[] leftRightDifference(int[] nums) {
        int n=nums.length;
        int[] LP=new int[n];
        int[] RP=new int[n];
        int[] RES=new int[n];
    LP[0]=0;
    for(int i=1;i<n;i++){
        LP[i]=LP[i-1]+nums[i-1];
    }
    RP[n-1]=0;
    for(int i=n-2;i>=0;i--){
        RP[i]=RP[i+1]+nums[i+1];
    }
    for(int i=0;i<n;i++){
       RES[i]=Math.abs(LP[i]-RP[i]);
    }
    return RES;
}
}
